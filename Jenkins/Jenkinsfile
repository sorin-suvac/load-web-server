pipeline {
    agent any

    stages {
        stage('Terraform apply') {
            steps {
                sh 'cd ${WORKSPACE}/Terraform'
                sh 'terraform init'
                sh 'terraform plan -input=false -out my-plan'
                sh 'terraform apply -input=false my-plan'
                sh 'terraform show'
            }
        }
        stage('Terraform destroy') {
            steps {
                sh 'terraform destroy -auto-approve'
            }
        }
    }
}
